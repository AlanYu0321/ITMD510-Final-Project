<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
  fx:controller="com.alanyu.final_project.controllers.ProductController" alignment="CENTER"
  spacing="15" stylesheets="@../css/login.css">

  <!-- Update Product Details -->
  <HBox spacing="10">
    <Label text="Product Id:"/>
    <TextField fx:id="productIdField"/>
  </HBox>

  <HBox spacing="10">
    <Label text="Product Name:"/>
    <TextField fx:id="productNameField"/>
  </HBox>

  <HBox spacing="10">
    <Label text="Category:"/>
    <TextField fx:id="categoryField"/>
  </HBox>

  <HBox spacing="10">
    <Label text="Image URL:"/>
    <TextField fx:id="imageUrlField"/>
  </HBox>

  <HBox spacing="10">
    <Label text="Price:"/>
    <TextField fx:id="priceField"/>
  </HBox>

  <HBox spacing="10">
    <Label text="Stock:"/>
    <TextField fx:id="stockField"/>
  </HBox>

  <HBox spacing="10">
    <Label text="Description:"/>
    <TextField fx:id="descriptionField"/>
  </HBox>

  <HBox spacing="10">
    <Button text="Back" onAction="#directToAdminProductList"/>
    <Button text="Update Product" onAction="#updateSelectedProduct"/>
  </HBox>
</VBox>