<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
  fx:controller="com.alanyu.final_project.controllers.UserController" alignment="CENTER"
  spacing="15" stylesheets="@../css/login.css">

  <!-- Insert User Details -->
  <HBox spacing="10">
    <Label text="Account:"/>
    <TextField fx:id="accountField"/>
  </HBox>

  <HBox spacing="10">
    <Label text="Password:"/>
    <TextField fx:id="passwordField"/>
  </HBox>

  <HBox spacing="10">
    <Label text="First Name:"/>
    <TextField fx:id="firstNameField"/>
  </HBox>

  <HBox spacing="10">
    <Label text="Last Name:"/>
    <TextField fx:id="lastNameField"/>
  </HBox>

  <HBox spacing="10">
    <Label text="Admin Access:"/>
    <TextField fx:id="adminAccessField"/>
  </HBox>

  <HBox spacing="10">
    <Button text="Back" onAction="#directToAdminUser"/>
    <Button text="Add User" onAction="#addSelectedUser"/>
  </HBox>
</VBox>